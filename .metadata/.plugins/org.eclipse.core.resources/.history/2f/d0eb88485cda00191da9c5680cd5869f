package Inputs;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.Hashtable;
import java.util.List;
import java.util.Arrays;
import java.util.Collections;
import java.util.ArrayList;

public class ElementData {
	
	private Hashtable<Integer, Integer> elem2rank;
	
	private Hashtable<Integer, List<Float> > elem2corner;



	public ElementData(String ElemMapFileName) throws NumberFormatException, IOException {
	
		BufferedReader elemFile = new BufferedReader(new FileReader(ElemMapFileName));
		this.elem2rank = new Hashtable<>();
		this.elem2corner = new Hashtable<>();
		String line;
		while ((line = elemFile.readLine()) != null) {
			String[] rank2elem = line.split(",");

			elem2rank.put(Integer.parseInt(rank2elem[0]),Integer.parseInt(rank2elem[1]));
			elem2corner.put(Integer.parseInt(rank2elem[0]),Arrays.asList(Float.parseFloat(rank2elem[3]),Float.parseFloat(rank2elem[2]),Float.parseFloat(rank2elem[5]),Float.parseFloat(rank2elem[4]),Float.parseFloat(rank2elem[7]),Float.parseFloat(rank2elem[6])));
		}
		elemFile.close();	
	
	}

	public Integer GetRank(Integer elementId) {
	return this.elem2rank.get(elementId);
}

	
	public List<Float> GetCorners(Integer elementId) {
		return this.elem2corner.get(elementId);
	}
	
	public ArrayList<Integer> GetKeys(String name){
		if(name == "elem2rank") {
			return Collections.list(elem2rank.keys());
		}
		if (name == "elem2corner") {
			return Collections.list(elem2corner.keys());
		}
	}
}
